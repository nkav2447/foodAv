<% layout('layouts/boilerplate')%>

<style>
  body {
    background-image: linear-gradient(80deg, #97afe7, #e9797c);
  }
  .card {
    background-image: linear-gradient(80deg, rgb(234, 215, 250), rgb(216, 234, 253));
  }
  h1 {
    color: rgb(247, 231, 208);
  }
  .card-text {
    height: 160px;
    overflow-y: scroll;
    width: 100%;
  }
  .card-text p {
    width: 550px;
    word-break: break-word;
  }
</style>

<section class="pb-3">
  <div class="container">
    <h1 class="text-center mb-3">Categories</h1>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <!--ADD CLASSES HERE d-flex align-items-stretch-->
      <% for (let i = 0; i < 12; i++) { %>
      <div class="col-lg-4 mb-3 d-flex align-items-stretch scroll">
        <div class="card">
          <img src="<%= categories[i].strCategoryThumb %> " class="card-img-top" alt="Card Image" />
          <div class="card-body d-flex flex-column">
            <h4 class="card-title text-center mt-3 demo"><%= categories[i].strCategory %></h4>
            <p class="card-text mb-4"><%= categories[i].strCategoryDescription %></p>
            <a
              href="/<%= categories[i].strCategory %>"
              class="btn btn-outline-dark mt-auto align-self-start"
              >More</a
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
